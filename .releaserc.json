{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "docs",
            "release": false
          },
          {
            "scope": "no-release",
            "release": false
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "type": "style",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular"
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": [
              "package.json",
              "web/package.json",
              "src-tauri/tauri.conf.json"
            ],
            "from": "\"version\": \"(.*?)\"",
            "to": "\"version\": \"${nextRelease.version}\""
          },
          {
            "files": [
              "web/app/(frontend)/components/version-indicator.tsx",
              "web_static/app/(frontend)/components/version-indicator.tsx"
            ],
            "from": "version: \"(.*?)\"",
            "to": "version: \"${nextRelease.version}\"",
            "countMatches": false
          },
          {
            "files": [
              "web/app/api/version/route.ts"
            ],
            "from": "version: \"(.*?)\"",
            "to": "version: \"${nextRelease.version}\"",
            "countMatches": false
          },
          {
            "files": [
              "src-tauri/Cargo.toml"
            ],
            "from": "name = \"EMPACT\"\nversion = \"(.*?)\"",
            "to": "name = \"EMPACT\"\nversion = \"${nextRelease.version}\"",
            "countMatches": false
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "web/package.json",
          "web/app/api/version/route.ts",
          "web/app/(frontend)/components/version-indicator.tsx",
          "src-tauri/Cargo.toml",
          "src-tauri/tauri.conf.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}