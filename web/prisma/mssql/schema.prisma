generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["debian-openssl-3.0.x", "native", "darwin", "linux-musl-openssl-3.0.x"]
    output        = "./generated/client"
}

datasource db {
    provider = "sqlserver"
    url      = env("MSSQL_DATABASE_URL")
}

